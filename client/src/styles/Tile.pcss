@import "./_colors.pcss";

.tile {
  width: 100%;
  height: auto;
  background-color: var(--color); 
  padding: 15px;
  @include shadow();
  text-decoration: none;

  &__title {
    color: $white;
    text-transform: capitalize;
    font-size: 20px;
    font-weight: 400;
  }

  &__content {
    margin-top: 5px;
    color: $white;
  }

  &__text {
    &--large {
      font-size: 50px;
    }

    &--mid {
      font-size: 30px;
    }

    &--small {
      font-size: 15px;
    }
  }
}