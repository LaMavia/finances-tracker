{
	"compilerOptions": {
		"target": "ES2016",
		"module": "commonjs",
		"lib": ["esnext.asynciterable", "dom", "es2015", "esnext"],
		"jsx": "react",
		"removeComments": true,
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"declaration": true,
		"sourceMap": true,
		"diagnostics": true,
		"rootDir": "./src/"
	},
	"exclude": [
    "./node_modules/"
  ]
}